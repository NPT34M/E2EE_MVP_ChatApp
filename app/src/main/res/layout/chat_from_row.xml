<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">

    <ImageView
        android:id="@+id/imgFromRow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/tvFromRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:maxWidth="240dp"
        android:padding="16dp"
        android:text="This is my message"
        app:layout_constraintEnd_toStartOf="@+id/imgFromRow"
        app:layout_constraintTop_toTopOf="@+id/imgFromRow" />

    <ImageView
        android:id="@+id/imgSendFromUser"
        android:layout_width="200dp"
        android:layout_height="200dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic"
        app:layout_constraintEnd_toStartOf="@+id/imgFromRow"
        app:layout_constraintTop_toTopOf="@+id/imgFromRow"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>